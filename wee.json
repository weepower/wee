{
	"paths": {
		"root": "public",
		"assets": "assets",
		"source": "source",
		"build": "build"
	},
	"style": {
		"output": {
			"filename": "[name].css"
		},
		"breakpoints": {
			"mobileLandscape": 480,
			"tablet": 768,
			"desktop": 1024,
			"desktop2": 1280,
			"desktop3": 1440
		},
		"breakpointOffset": 25
	},
	"script": {
		"entry": {
			"app": "app.js"
		},
		"output": {
			"filename": "[name].bundle.js"
		},
		"manifest": {
			"enabled": false,
			"options": {
				"name": "manifest"
			}
		},
		"vendor": {
			"enabled": false,
			"options": {
				"name": "vendor"
			}
		},
		"chunking": {
			"enabled": false,
			"options": {
				"name": "common",
				"minChunks": 2
			}
		}
	},
	"server": {
		"ghostMode": false,
		"host": "auto",
		"port": 9000,
		"https": true,
		"proxy": "https://wee.dev",
		"static": true,
		"reload": {
			"enable": true,
			"watch": {
				"root": true,
				"paths": [],
				"extensions": [
					"html"
				],
				"ignore": []
			}
		}
	}
}
