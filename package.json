{
  "name": "wee",
  "version": "4.0.0-alpha.9",
  "description": "Blueprint for modern web development",
  "homepage": "https://www.weepower.com",
  "license": "Apache-2.0",
  "moduleRoots": "node_modules/wee-core/scripts",
  "keywords": [
    "css",
    "framework",
    "javascript"
  ],
  "repository": "weepower/wee",
  "bugs": "https://github.com/weepower/wee/issues",
  "config": {
    "root": "public",
    "source": "source",
    "build": "build",
    "tasks": "build/tasks"
  },
  "scripts": {
    "serve": "browser-sync start --config $npm_package_config_build/bs-config.js",
    "build:css": "node $npm_package_config_tasks/postcss.js",
    "build:js": "BASE_PATH=$npm_package_config_source webpack --config=$npm_package_config_build/webpack.config.js",
    "build:js:prod": "NODE_ENV=production npm run build:js -- --display-modules -p",
    "build:images": "node $npm_package_config_tasks/images.js",
    "build:fonts": "node $npm_package_config_tasks/fonts.js",
    "build:init": "node $npm_package_config_tasks/init.js",
    "build": "npm run --silent reset && npm run --silent build:init && npm run --silent build:fonts && npm run --silent build:images && npm run --silent build:css && npm run --silent build:js",
    "reset": "node $npm_package_config_tasks/reset.js",
    "watch:js": "BASE_PATH=$npm_package_config_source npm run build:js -- --watch",
    "watch:css": "onchange $npm_package_config_source/styles/*.pcss $npm_package_config_source/styles/*.js $npm_package_config_source/components/**/*.pcss -- npm run build:css",
    "watch:images": "onchange $npm_package_config_source/images -- npm run build:images",
    "watch": "npm-run-all -p watch:js watch:css watch:images",
    "start": "npm run --silent build && npm-run-all -p serve watch",
    "wee": "wee"
  },
  "devDependencies": {
    "async": "^2.1.4",
    "autoprefixer": "^6.6.1",
    "babel-core": "^6.21.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.16.0",
    "browser-sync": "^2.18.6",
    "chalk": "^1.1.3",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "fs-extra": "^2.0.0",
    "glob": "^7.1.1",
    "imagemin": "^5.3.1",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "imagemin-svgo": "^5.2.2",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss": "^5.2.12",
    "postcss-js-mixins": "^2.5.0",
    "postcss-nested": "^1.0.0",
    "postcss-nested-selectors": "^0.1.1",
    "postcss-variable-media": "^0.2.0",
    "postcss-variables": "^1.0.1",
    "postcss-wee-syntax": "^2.0.1",
    "vue": "^2.0.1",
    "vue-loader": "^12.0.0",
    "vue-template-compiler": "^2.1.10",
    "webpack": "^2.2.0",
    "webpack-uglify-js-plugin": "^1.1.9",
    "wee-cli": "next",
    "wee-core": "next"
  },
  "dependencies": {}
}
